        </div>

        <div class="tabs">
            <div class="tab active" onclick="showTab('add')">Container hinzuf√ºgen</div>
            <div class="tab" onclick="showTab('list')">Meine Container</div>
            <div class="tab" onclick="showTab('visit')">Besuch eintragen</div>
        </div>

        <div class="content">
            <!-- Container hinzuf√ºgen -->
            <div id="add-tab" class="tab-content">
                <h2>Neuen Container hinzuf√ºgen</h2>
                <form id="container-form">
                    <div class="form-group">
                        <label for="address">Adresse/Standort:</label>
                        <input type="text" id="address" required placeholder="z.B. Mariahilfer Stra√üe 123, 1060 Wien">
                    </div>
                    <div class="form-group">
                        <label for="district">Bezirk:</label>
                        <select id="district" required>
                            <option value="">Bezirk w√§hlen</option>
